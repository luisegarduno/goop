{
  "name": "@goop/backend",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:cleanup-tests": "bun run scripts/cleanup-test-sessions.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "0.44.7",
    "fast-glob": "^3.3.3",
    "hono": "^4.0.0",
    "openai": "^6.9.1",
    "postgres": "^3.4.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.22.0"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@types/node": "^20.19.25",
    "drizzle-kit": "0.31.7",
    "drizzle-seed": "^0.3.1"
  }
}
